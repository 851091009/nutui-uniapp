{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types",
      "@uni-helper/uni-app-types"
    ]
  },
  "include": [
    "node_modules/nutui-uniapp/global.d.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/pages/demo/business/category/data.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/utils/touchEmulator.js"
  ]
}
